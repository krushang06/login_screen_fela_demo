<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <AutoCompleteTextView
            android:id="@+id/ETAutoComplete"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:background="@drawable/cancelviewimg"
            android:hint="search"
            android:paddingStart="30dp"
            android:layout_marginTop="-22dp"
            android:textColor="@color/black"
            android:textColorHint="#114384"
            android:layout_marginStart="-5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:id="@+id/cancelsmallimg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/cancelsmall"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="@+id/ETAutoComplete"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>